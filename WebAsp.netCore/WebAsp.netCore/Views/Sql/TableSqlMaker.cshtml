<!DOCTYPE html>
<html>
<head  runat="server">
    <meta charset="UTF-8">
</head>
<body>
    <form id="form1" runat="server">
        <div style="width : 1100px;">
            <div style="border: 1px solid gold; width : 1100px; height : auto; margin : 4px;">
                <div>
                    <h4>
                        Create Table.
                    </h4>
                    <p>
                        Table Name :
                        <input id="tableName" />
                    </p>
                    <input id="testBox" type="button" value="Get Result SQL" onclick="tableScript()" />
                    <input id="Id_Of_Textbox" type="button" value="Add New Column" onclick="newColumnMaker()" />
                    <p>
                        <table id="tableMaker" tabindex="213" border="1" cellpadding="3">
                            <thead>
                                <tr>
                                    <th id = "cname">Column Name
                                    <th id = "dateType">Datatype
                                    <th id = "pk">PK
                                    <th id = "nn">NN
                                    <th id = "nq">UQ
                                    <th id = "b">B&nbsp;&nbsp;
                                    <th id = "un">UN
                                    <th id = "zf">ZF
                                    <th id = "ai">AI&nbsp;
                                    <th id = "g">G&nbsp;&nbsp;
                                    <th id = "deleteButton">DeleteColumn
                                </tr>
                                <tr>
                                    <td headers="cname">
                                        <input type="text"  size="10" />
                                    </td>
                                    <td headers="dateType">
                                        <input type="text" value="s" list="typelist" oninput="columnTypeSelect(this)" />
                                        <datalist id="typelist">
                                            <option value="VARCHAR()">VARCHAR(SIZE)</option>
                                            <option value="INT">INT</option>
                                            <option value="DECIMAL()">DECIMAL(SIZE)</option>
                                            <option value="DATETIME">DATETIME</option>
                                            <option value="BLOB">BLOB</option>
                                        </datalist>

                                    </td>
                                    <td headers="pk"><input type="checkbox" onclick="pkCheckboxClick(this)" size="10" style="float:left;"></td>
                                    <td headers="nn"><input type="checkbox" onclick="nnCheckboxClick(this)" size="10" style="float:left;"></td>
                                    <td headers="uq"><input type="checkbox"  size="10" style="float:left;"></td>
                                    <td headers="b" ><input type="checkbox" onclick="bCheckboxClick(this)" size="10" style="float:left;"></td>
                                    <td headers="un"><input type="checkbox"  size="10" style="float:left;"></td>
                                    <td headers="zf"><input type="checkbox"  size="10" style="float:left;"></td>
                                    <td headers="ai"><input type="checkbox" onclick="aiAndgCheckboxClick(this)" size="10" style="float:left;"></td>
                                    <td headers="g" ><input type="checkbox" onclick="aiAndgCheckboxClick(this)" size="10" style="float:left;"></td>
                                    <td headers="deleteButton"><input type="button" onclick="columnDelete(this)" value="Delete Button"  size="100" style="float:left;"></td>
                                </tr>
                            </thead>
                        </table>
                    </p>
                </div>
                <div>
                    <h2>
                        Result
                    </h2>
                    <p>
                        &ensp;CREATE TABLE 테이블 이름 (<br>
                        &ensp;&emsp;컬럼명1 DATATYPE [DEFAULT 형식],<br>
                        &ensp;&emsp;컬럼명2 DATATYPE [DEFAULT 형식],<br>
                        &ensp;&emsp;컬럼명3 DATATYPE [DEFAULT 형식]<br>
                        &ensp;);<br>
                    </p>
                </div>
            </div>
